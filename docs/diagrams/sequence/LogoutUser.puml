@startuml Logout User (GET)

header GoCamply Sequence Diagram
footer Page %page% of %lastpage%
title "Logout User (GET)"

participant "Client" as client
participant "<<javaScript>>\n:server" as server
participant "<<router>>\n:auth" as routerAuth
participant "<<middleware>>\n:protect" as mwProtect
participant "<<controllers>>\n:auth" as controllersAuth

client->server ++: req.get('/api/v1/auth/logout')
server->routerAuth ++: app.use('/api/v1/auth', auth)
routerAuth -> mwProtect ++: protect(req)
mwProtect -> mwProtect --: verify token / set req.user
mwProtect --> routerAuth --: next()
routerAuth -> controllersAuth ++: logout(req)
controllersAuth -> controllersAuth ++: res.cookie('token','none',{expires: now+10s, httpOnly:true})
controllersAuth -> client --: response 200 { success: true, data: {} }

@enduml
